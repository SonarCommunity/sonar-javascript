{
  "extends": "../packages/tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@sonar/css": ["../packages/css/src"],
      "server": ["../packages/server"],
      "routing/*": ["../packages/bridge/src/*"],
      "@sonar/css/*": ["../packages/css/src/*"],
      "*": ["../packages/legacy/src/*"]
    }
  },
  "references": [
    {
      "path": "../packages/tsconfig.json"
    }
  ],
  "exclude": ["**/fixtures/**", "**/linting/eslint/rules/comment-based/**"]
}
