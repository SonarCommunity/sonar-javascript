{
  "name": "eslint-bridge",
  "version": "1.0.0",
  "description": "bridge between SonarJS and ESLint",
  "scripts": {
    "build": "yarn install && yarn check-format && yarn clear && yarn compile",
    "clear": "tsc -b src tests --clean",
    "check-format": "prettier --list-different \"{src,tests}/**/!(*.lint).ts\"",
    "test": "jest",
    "format": "prettier --write \"{src,tests}/**/!(*.lint).ts\"",
    "compile": "tsc -b src tests",
    "jar": "rollup --config rollup.config.js && mkdirp target/classes && mv index.js target/classes",
    "new-rule": "ts-node tools/newRule.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/SonarJS.git"
  },
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/SonarJS/issues"
  },
  "homepage": "https://github.com/SonarSource/SonarJS#readme",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/bytes": "3.1.0",
    "@types/eslint": "7.2.6",
    "@types/eslint-scope": "3.7.0",
    "@types/estree": "0.0.46",
    "@types/express": "4.16.0",
    "@types/jest": "26.0.14",
    "@types/node": "14.14.22",
    "jest": "26.6.3",
    "jest-sonar-reporter": "1.3.0",
    "mkdirp": "1.0.4",
    "prettier": "2.1.2",
    "rollup": "^2.44.0",
    "ts-jest": "26.4.1",
    "ts-node": "9.0.0",
    "tslib": "^2.1.0"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/experimental-utils": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "babel-eslint": "10.1.0",
    "body-parser": "1.18.3",
    "builtin-modules": "3.1.0",
    "bytes": "3.1.0",
    "eslint": "7.19.0",
    "eslint-plugin-chai-friendly": "0.5.0",
    "eslint-plugin-sonarjs": "0.6.0",
    "express": "4.16.3",
    "run-node": "1.0.0",
    "typescript": "4.2.3",
    "vue-eslint-parser": "7.4.1"
  },
  "bundledDependencies": [
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/experimental-utils",
    "@typescript-eslint/parser",
    "babel-eslint",
    "body-parser",
    "builtin-modules",
    "bytes",
    "eslint",
    "eslint-plugin-chai-friendly",
    "eslint-plugin-sonarjs",
    "express",
    "run-node",
    "vue-eslint-parser",
    "typescript"
  ],
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "files": [
    "lib/",
    "bin/",
    "output/"
  ]
}
