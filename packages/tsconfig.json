{
  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2021", "dom"],
    "outDir": "../lib",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../node_modules/@types", "../typings"],
    "paths": {
      "@sonar/css": ["./css/src"],
      "@sonar/html": ["./html/src"],
      "@sonar/jsts": ["./jsts/src"],
      "@sonar/shared": ["./shared/src"],
      "@sonar/yaml": ["./yaml/src"]
    },
    "allowJs": true
  },
  "include": ["server.ts", "bridge/src/worker.js"]
}
