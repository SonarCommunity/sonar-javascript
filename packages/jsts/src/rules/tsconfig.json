{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2023", "dom"],
    "declaration": true,
    "outDir": "../../../../lib/jsts/src/rules",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "baseUrl": ".",
    "composite": true,
    "allowJs": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.fixture.*", "**/fixtures"]
}
