{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "composite": true
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "include": ["*/tests", "*/src/rules/tools", "*/src/rules/*/*.test.ts"],
  "exclude": [
    "*/tests/**/fixtures",
    "*/tests/rules/comment-based",
    "*/src/rules/*/*.fixture.*",
    "*/src/rules/*/fixtures"
  ]
}
